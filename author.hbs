{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
<header class="index-header author">
    {{#if cover}}
        <img src="{{cover}}" alt="{{cover}}" class="index-header-bg">
        <div class="index-header-mask"></div>
    {{/if}}
    <section class="blog-title-panel">
        <h2 class="author-name">{{name}}</h2>
        <p class="author-location">{{location}}</p>
        <p class="author-bio">
            {{#if bio}}{{bio}}{{/if}}
        </p>
        <p class="author-others">
            {{#if website}}Website: <a href="{{website}}">{{website}}</a><br>{{/if}}
            Total: {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
        </p>
    </section>
    {{#if image}}
    <section class="blog-logo-panel">
        <a class="blog-logo" href="{{@blog.url}}" title="Back to Home"><img src="{{image}}" alt="{{name}}" /></a>
    </section>
    {{/if}}
</header>
{{/author}}

{{! The main content area on the homepage }}
<main class="index-content tag" id="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
