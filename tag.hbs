{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="index-header tag"
    {{#if tag.image}}
        style="background-image: url({{tag.image}})"
    {{else if @blog.cover}}
        style="background-image: url({{@blog.cover}})"
    {{/if}}
>
    <div class="index-header-mask"></div>
    <section class="blog-logo-panel">
        {{#if @blog.logo}}
        <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
        {{/if}}
    </section>
    <section class="blog-title-panel">
        <h2 class="tag-name">Tag: {{tag.name}}</h2>
        <p class="tag-description">
            {{#if tag.description}}{{tag.description}}{{else}}共{{pagination.total}}篇文章{{/if}}
        </p>
    </section>
</header>

{{! The main content area on the homepage }}
<main class="index-content tag" id="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
